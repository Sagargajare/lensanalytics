{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@components*": ["src/components*"],
      "@utils*": ["src/utils*"],
      "@lib*": ["src/lib*"],
      "@assets*": ["src/assets*"],
      "hooks*": ["src/hooks*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/styles/index.css"],
  "exclude": ["cypress/support"]
}